    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch stockbot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}/cmd",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "CGO_ENABLED": "1",
                "CC": "gcc",
                "CGO_CFLAGS": "-g -O2",
                "CGO_LDFLAGS": "-v"
            },
            "args": [
                "--guild=497544520695808000",
                "--debug",
                "--rmcmd"
            ]
        },
        {
            "name": "Purge stockbot commands",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}/cmd",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "CGO_ENABLED": "1",
                "CC": "gcc",
                "CGO_CFLAGS": "-g -O2",
                "CGO_LDFLAGS": "-v"
            },
            "args": [
                "--guild=497544520695808000",
                "--debug",
                "--rmcmd",
                "--purgecmd"
            ]
        },
    ]
}